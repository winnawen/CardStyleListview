<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.winna.cardstylelistview.shop">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/home_bg_white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="662dp"
            android:layout_height="186dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/shop_icon"
                android:layout_width="190dp"
                android:layout_height="134dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/home_bg_blue"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="商店名称"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvjuli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500m"
                android:layout_toRightOf="@+id/tvname"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:id="@+id/imgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_icon"
                android:layout_below="@+id/tvname"
                android:src="@drawable/home_icon_guide"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgv"
                android:layout_below="@+id/tvname"
                android:text="多乐街万家福对面"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvrate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgv"
                android:layout_toRightOf="@+id/shop_icon"
                android:text="综合评价:"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <RatingBar
                android:id="@+id/rb_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvrate"
                android:layout_below="@+id/tvname"
                android:isIndicator="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:progressDrawable="@drawable/home_icon_comment"
                android:rating="2"/>





        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_margin="5dp"
        android:background="@drawable/home_bg_white"
        android:orientation="vertical" >


        <RelativeLayout
            android:id="@+id/rl12"
            android:layout_width="662dp"
            android:layout_height="186dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/shop_icon2"
                android:layout_width="190dp"
                android:layout_height="134dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/home_bg_blue"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_icon2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="商店名称"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvjuli2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500m"
                android:layout_toRightOf="@+id/tvname2"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                />
            <ImageView
                android:id="@+id/imgv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_icon2"
                android:layout_below="@+id/tvname2"
                android:src="@drawable/home_icon_guide"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgv2"
                android:layout_below="@+id/tvname2"
                android:text="多乐街万家福对面"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvrate2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgv2"
                android:layout_toRightOf="@+id/shop_icon2"
                android:text="综合评价:"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <RatingBar
                android:id="@+id/rb_bar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvrate2"
                android:layout_below="@+id/tvname2"
                android:isIndicator="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:progressDrawable="@drawable/home_icon_comment"
                android:rating="2"/>





        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
